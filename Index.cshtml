<body>
    <div id="mainDiv">
        <div id="HeaderDiv">
            <div id="logo"><img src="C:/Users/rajam/Documents/CartIcon.jpg"></div>
            <div id="title">
                <h2 style="color:chocolate ; text-align:center"> Shopping Zone</h2>
            </div>


        </div>

        <div id="ContentDiv">
            <div id="Info" style="color: chocolate; text-align: center; font:large">


                <form name="LoginForm" ng-app="LoginApp" ng-controller="Logctlr" novalidate>

                    <label for="UserName" id="loginLabel" style="color:#5c6467;  font-family:'Arial Rounded MT'">Sign Up</label>
                    <br />

                    <input id="firstnameid" title="userid1" type="text" name="firstname" ng-model="log.FirstName" placeholder="First Name" size="80" height="60" style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border-top-left-radius: 6px; border-top-right-radius: 6px; ">
                    <br />
                    <span style="color:red" ng-show="LoginForm.log.FirstName.$dirty && LoginForm.log.FirstName.$invalid">First Name is required.</span>


                    <br />
                    <input id="lastnameid" title="userid2" type="text" name="lastname" ng-model="log.LastName" placeholder="Last Name" size="80" height="60" style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border-top-left-radius: 6px; border-top-right-radius: 6px; ">
                    <br />
                    <span style="color:red" ng-show="LoginForm.lastnameid.$dirty && LoginForm.lastnameid.$invalid">Last Name is required.</span>

                    <br /><br />
                    <label for="sex" id="sexlabl">Gender</label> &nbsp;&nbsp;&nbsp;
                    <select name="sex" ng-model="sexid">

                        <option value="male" selected>Male</option>
                        <option value="female">Female</option>
                    </select>

                    <br />
                    <br />
                    <input id="inputId" title="userid" type="text" name="username" ng-model="log.UserName" placeholder="User Name" size="80" height="60" style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border-top-left-radius: 6px; border-top-right-radius: 6px; ">
                    <br />
                    <span style="color:red" ng-show="LoginForm.log.UserName.$dirty && LoginForm.log.UserName.$invalid">Username is required.</span>


                    <br />

                    <input id="pId" title="Password" type="text" name="passwrod" ng-model="log.Key" placeholder="password" size="80" height="60" style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border-top-left-radius: 6px; border-top-right-radius: 6px; ">
                    <br />
                    <span style="color:red" ng-show="LoginForm.pId.$dirty && LoginForm.pId.$invalid">Password is required.</span><br />
                    <span ng-show="LoginForm.pId.$touched && LoginForm.pId.$error.minlength">Minimum 6 characters required.</span><br />
                    <span ng-show="LoginForm.pId.$touched && LoginForm.pId.$error.maxlength">Minimum 11 characters required.</span>
                    <br />


                    <input id="emailid" title="emid" type="text" name="email" ng-model="log.Email" placeholder="krishna.raja78@gmail.com" size="80" height="60" style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border-top-left-radius: 6px; border-top-right-radius: 6px; ">
                    <br />
                    <span style="color:red" ng-show="LoginForm.emailid.$dirty && LoginForm.emailid.$invalid">email is required.</span>


                    <br />

                    <input id="dobid" title="dob" type="number" name="dobname" ng-model="log.date" placeholder="14-12-1992" size="80" height="60" style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border-top-left-radius: 6px; border-top-right-radius: 6px; ">
                    <br />
                    <span style="color:red" ng-show="LoginForm.dobid.$dirty && LoginForm.dobid.$invalid">Date Of Birth is required.</span>


                    <br />
                    <input id="mob" title="mobid" type="number" name="mobile" ng-model="log.MobileNo" placeholder="7891032726" size="80" height="60" style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; border-top-left-radius: 6px; border-top-right-radius: 6px; ">
                    <br />
                    <span style="color:red" ng-show="LoginForm.mob.$dirty && LoginForm.mob.$invalid">Mobile No is required.</span>


                    <br />




                    <button type="submit" name="Sign Up" ng-click="saveIt()" style="background-color:lightblue">Sign Up</button>
                    <button type="submit" name="Clear" ng-click="clear()" style="background-color:lightblue">Clear</button>
                    <input type="button" data-ng-click="update()" value="Update" />

                </form>

            </div>


            <div style="text-align:center; width:400px">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Sex</th>
                            <th>User Name</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>DOB</th>
                            <th>Mobile No</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="item in signlist">
                            <td>{{item.FirstName}}</td>
                            <td>{{item.LastName}}</td>
                            <td>{{item.sexid}}</td>
                            <td>{{item.UserName}}</td>
                            <td>{{item.Key}}</td>
                            <td>{{item.date}}</td>
                            <td>{{item.Email}}</td>
                            <td>{{item.MobileNo}}</td>
                            <td><input type="button" data-ng-click="load()" value="Get" /></td>
                            <td><input type="button" data-ng-click="edit(item)" value="Edit" /></td>
                            <td><input type="button" data-ng-click="delete(item)" value="Delete" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>






        </div>

      

    <script>
        var app = angular.module('LoginApp', []);
        app.controller('Logctlr', function ($scope, $http) {

            
            $scope.signlist = [];

            $scope.load = function () {
                $http({
                    type: 'GET',
                    
                    url: '/Home/getList',
                    success: function (data) {
                        $scope.signlist = data.data;
                        $scope.$apply();
                       
                    }
                });
            }
           // $scope.load();


            $scope.clear = function () {
                $scope.log.FirstName = '';
                $scope.log.LastName = '';
                //$scope.log.sex = '';
                $scope.log.UserName = '';
                $scope.log.Key = '';
                $scope.log.date = '';
                $scope.log.Email = '';
                $scope.log.MobileNo = '';
            }
          //  $scope.clear();
            $scope.saveIt = function () {
                $http({
                    method: 'POST',
                    data: $scope.log,
                    url: '/Home/save',



                       

                }).then(function successCallback(response) {
                    // this callback will be called asynchronously
                    // when the response is available
                   alert("saved successfully");
                    //  $scope.clear();
                  // $scope.load();
                }, function errorCallback(response) {
                    // called asynchronously if an error occurs
                    // or server returns response with an error status.
                    alert("error in saving");
                })

              //  alert("saved");
            }

            $scope.delete = function (data) {
                var state = confirm("Do you want to delete this record");
                if (state == true) {
                    $http({
                        type: 'POST',
                        contentType: 'application/json; charset=utf-8',
                        //data: "{ id: "+data.id+" }",
                        data: $scope.data,
                        url: '/Home/delete',
                        success: function (status) {
                            alert("deleted")
                        },
                        error: function (status) {
                        alert("error in deleting")}
                    });
                }
            }

            $scope.edit = function (index) {
                $scope.log.FirstName = index.FirstName;
                $scope.log.LastName = index.lastName;
                $scope.log.sexid = index.sexid;
                $scope.log.UserName = index.UserName;
                $scope.log.Key = index.Key;
                $scope.log.DateOfBirth = index.DateOfBirth;
                $scope.log.Email = index.Email;
                $scope.log.MobileNo = index.MobileNo;
            };

            
        });

    </script>

    

